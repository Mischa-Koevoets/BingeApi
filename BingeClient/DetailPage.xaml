<Page
    x:Class="BingeClient.DetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock Text="Details van Film/Serie" FontSize="24" FontWeight="Bold" Margin="10"/>

            <TextBlock Text="Titel:" FontSize="18" Margin="10"/>
            <TextBox x:Name="TitleTextBox" FontSize="18" Margin="10"/>

            <TextBlock Text="Platform:" FontSize="18" Margin="10"/>
            <TextBox x:Name="PlatformTextBox" FontSize="18" Margin="10"/>

            <TextBlock Text="Genre:" FontSize="18" Margin="10"/>
            <TextBox x:Name="GenreTextBox" FontSize="18" Margin="10"/>

            <TextBlock Text="Releasejaar:" FontSize="18" Margin="10"/>
            <TextBox x:Name="ReleaseYearTextBox" FontSize="18" Margin="10"/>

            <TextBlock Text="Beoordeling:" FontSize="18" Margin="10"/>
            <TextBox x:Name="RatingTextBox" FontSize="18" Margin="10"/>

            <Button Content="Opslaan" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>