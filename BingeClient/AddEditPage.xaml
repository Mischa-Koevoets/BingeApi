<Page
    x:Class="BingeTrackerApp.Pages.AddEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BingeTrackerApp.Pages"
    xmlns:models="using:BingeClient.Models">

    <Grid Padding="20">
        <StackPanel Spacing="10">
            <TextBlock Text="Titel"/>
            <TextBox Name="TitleTextBox"/>

            <TextBlock Text="Release Jaar"/>
            <TextBox Name="ReleaseYearTextBox"/>

            <TextBlock Text="Beoordeling (1-5)"/>
            <TextBox Name="RatingTextBox"/>
            
            <TextBlock Text="Genre"/>
            <ComboBox Name="GenreComboBox"/>


            <TextBlock Text="Type"/>
            <ComboBox Name="TypeComboBox">
                <ComboBoxItem Content="Film" Tag="Movie"/>
                <ComboBoxItem Content="Serie" Tag="Series"/>
            </ComboBox>

            <Button Content="Opslaan" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
