<Page
    x:Class="BingeTrackerApp.Pages.AddEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BingeTrackerApp.Pages"
    xmlns:models="using:BingeClient.Models">

    <Grid Padding="20">
        <StackPanel Spacing="10">
            <TextBlock Text="Titel"/>
            <TextBox x:ConnectionId='2' Name="TitleTextBox"/>

            <TextBlock Text="Release Jaar"/>
            <TextBox x:ConnectionId='3' Name="ReleaseYearTextBox"/>

            <TextBlock Text="Beoordeling (1-5)"/>
            <TextBox x:ConnectionId='4' Name="RatingTextBox"/>
            
            <TextBlock Text="Genre"/>
            <ComboBox x:ConnectionId='5' Name="GenreComboBox"/>


            <TextBlock Text="Type"/>
            <ComboBox x:ConnectionId='6' Name="TypeComboBox">
                <ComboBoxItem Content="Film" Tag="Movie"/>
                <ComboBoxItem Content="Serie" Tag="Series"/>
            </ComboBox>

            <Button x:ConnectionId='7' Content="Opslaan"                         />
        </StackPanel>
    </Grid>
</Page>

